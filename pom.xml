            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <scm>
        <url>
            https://github.com/weimin96/file-viewer-tool
        </url>
        <connection>
            scm:git@github.com:weimin96/file-viewer-tool.git
        </connection>
        <developerConnection>
            scm:git@github.com:weimin96/file-viewer-tool.git/issues
        </developerConnection>
    </scm>

    <developers>
        <developer>
            <name>weimin96</name>
            <email>735313582@qq.com</email>
            <organization>github.com:weimin96</organization>
            <timezone>+8</timezone>
        </developer>
