    <modelVersion>4.0.0</modelVersion>

    <groupId>io.github.weimin96</groupId>
    <artifactId>file-viewer-tool</artifactId>
    <version>1.0.0</version>
    <packaging>jar</packaging>
    <name>file-viewer-tool</name>
